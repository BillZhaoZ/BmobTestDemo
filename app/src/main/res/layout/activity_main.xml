<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.siqi.bmob.MainActivity">

    <TextView
        android:id="@+id/tv_insert"
        android:layout_width="82dp"
        android:layout_height="51dp"
        android:layout_marginStart="90dp"
        android:gravity="center"
        android:text="插入数据"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.415"
        tools:layout_editor_absoluteX="90dp"/>

    <TextView
        android:id="@+id/tv_get"
        android:layout_width="88dp"
        android:layout_height="44dp"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="200dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="获取数据"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintLeft_toLeftOf="@+id/tv_insert"
        app:layout_constraintRight_toRightOf="@+id/tv_insert"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571"
        />

    <TextView
        android:id="@+id/tv_modify"
        android:layout_width="81dp"
        android:layout_height="53dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:gravity="center"
        android:text="修改数据"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419"/>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="84dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="删除数据"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_get"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="@+id/tv_modify"
        app:layout_constraintRight_toRightOf="@+id/tv_modify"
        app:layout_constraintTop_toBottomOf="@+id/tv_modify"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="231dp"
        tools:layout_editor_absoluteY="282dp"/>

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="204dp"
        android:layout_height="49dp"
        android:layout_marginTop="72dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:hint="显示数据的条目"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:layout_width="97dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="59dp"
        android:gravity="bottom"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_delete"/>

</android.support.constraint.ConstraintLayout>
