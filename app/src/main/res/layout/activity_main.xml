<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.siqi.bmob.MainActivity">

    <TextView
        android:id="@+id/tv_insert"
        android:layout_width="83dp"
        android:layout_height="49dp"
        android:layout_marginLeft="93dp"
        android:gravity="center"
        android:text="插入数据"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.367"/>


    <TextView
        android:id="@+id/tv_get"
        android:layout_width="88dp"
        android:layout_height="47dp"
        android:layout_marginLeft="200dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="获取数据"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintLeft_toLeftOf="@id/tv_insert"
        app:layout_constraintRight_toRightOf="@id/tv_insert"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="265dp"/>

    <TextView
        android:id="@+id/tv_modify"
        android:layout_width="81dp"
        android:layout_height="53dp"
        android:layout_marginRight="63dp"
        android:gravity="center"
        android:text="修改数据"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.371"/>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="81dp"
        android:layout_height="51dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="删除数据"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_get"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        />

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="204dp"
        android:layout_height="49dp"
        android:layout_marginTop="65dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:hint="显示数据的条目"
        android:textColor="@android:color/white"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
